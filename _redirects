# Cloudflare Pages Redirects

# Article routes - use splat to pass ID to article page
/article/* /pages/article.html?id=:splat 200

# Clean URLs for main pages
/tools /pages/tools.html 200
/blog /pages/blog.html 200
/about /pages/about.html 200

# Admin panel
/admin /admin/index.html 200
/admin/* /admin/:splat 200

# Home page
/ /index.html 200
